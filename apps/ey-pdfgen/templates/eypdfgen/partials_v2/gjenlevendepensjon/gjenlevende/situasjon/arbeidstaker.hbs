<table>
    <thead>
    <tr>
        <th colspan="2">Arbeid og utdanning</th>
    </tr>
    </thead>

    <tbody>
    <tr>
        <td>{{this.dinSituasjon.spoersmaal}}</td>
        <td>
            {{#each this.dinSituasjon.svar}}
                - {{capitalize_names this.innhold}} <br/>
            {{/each}}
        </td>
    </tr>

    {{#each soeker.arbeidOgUtdanning.arbeidsforhold.svar}}
        <tr>
            <td colspan="2">
                <table class="inner">
                    <thead>
                    <tr>
                        <th colspan="2">
                            {{#eq spraak "en"}}
                                About your employer
                            {{else}}
                                {{#eq spraak "nn"}}
                                    Om arbeidsforhold
                                {{else}}
                                    Om arbeidsgiver
                                {{/eq}}
                            {{/eq}}
                        </th>
                    </tr>
                    </thead>

                    <tbody>
                    {{> eypdfgen/partials_v2/common/opplysning this.arbeidsgiver}}

                    {{> eypdfgen/partials_v2/common/opplysning this.ansettelsesforhold}}

                    {{> eypdfgen/partials_v2/common/opplysning this.stillingsprosent}}

                    {{> eypdfgen/partials_v2/common/opplysning this.endretInntekt}}

                    {{#eq this.endretInntekt.svar "JA" }}
                        {{> eypdfgen/partials_v2/common/opplysning this.endretInntekt}}
                    {{/eq}}
                    </tbody>
                </table>
            </td>
        </tr>
    {{/each}}
    </tbody>
</table>
