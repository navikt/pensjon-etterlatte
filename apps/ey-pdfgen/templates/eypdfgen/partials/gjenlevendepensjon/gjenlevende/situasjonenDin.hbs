<table>
    <thead>
        <tr>
            <th colspan="2">
                <h4>Opplysninger om gjenlevendes situasjon</h4>
            </th>
        </tr>
    </thead>

    {{#with soeker.arbeidOgUtdanning}}
    <tr>
        <th colspan="2">
            <h3>Arbeid og utdanning</h3>
        </th>
    </tr>
    <tbody>
        <tr>
            <td>{{this.dinSituasjon.spoersmaal}}</td>
            <td>
                {{#each this.dinSituasjon.svar}}
                     - {{capitalize_names this}} <br/>
                {{/each}}
            </td>
        </tr>

        {{#each soeker.arbeidOgUtdanning.arbeidsforhold.svar}}
        <tr>
            <td colspan="2">
                <table class="inner">
                    <thead>
                    <tr>
                        <th colspan="2">Om arbeidsgiver</th>
                    </tr>
                    </thead>

                    <tbody>
                    <tr>
                        <td>{{this.arbeidsgiver.spoersmaal}}</td>
                        <td>{{this.arbeidsgiver.svar}}</td>
                    </tr>
                    <tr>
                        <td>{{this.ansettelsesforhold.spoersmaal}}</td>
                        <td>{{capitalize_names this.ansettelsesforhold.svar}}</td>
                    </tr>
                    <tr>
                        <td>{{this.stillingsprosent.spoersmaal}}</td>
                        <td>{{this.stillingsprosent.svar}}</td>
                    </tr>
                    <tr>
                        <td>{{this.endretInntekt.spoersmaal}}</td>
                        <td>{{capitalize_names this.endretInntekt.svar}}</td>
                    </tr>
                    {{#if this.endretInntekt.svar "JA" }}
                        <tr>
                            <td>{{this.endretInntekt.opplysning.spoersmaal}}</td>
                            <td>{{this.endretInntekt.opplysning.svar}}</td>
                        </tr>
                    {{/if}}
                    </tbody>
                </table>
            </td>
        </tr>
        {{/each}}

        {{#each soeker.arbeidOgUtdanning.selvstendig.svar}}
            <tr>
                <td colspan="2">
                    <table class="inner">
                        <thead>
                        <tr>
                            <th colspan="2">Selvstendig næringsdrivende</th>
                        </tr>
                        </thead>

                        <tbody>
                        <tr>
                            <td>{{this.firmanavn.spoersmaal}}</td>
                            <td>{{this.firmanavn.svar}}</td>
                        </tr>
                        <tr>
                            <td>{{this.orgnr.spoersmaal}}</td>
                            <td>{{this.orgnr.svar}}</td>
                        </tr>
                        <tr>
                            <td>{{this.endretInntekt.spoersmaal}}</td>
                            <td>{{capitalize_names this.endretInntekt.svar}}</td>
                        </tr>
                        {{#if this.endretInntekt.svar "JA" }}
                            <tr>
                                <td>{{this.endretInntekt.opplysning.spoersmaal}}</td>
                                <td>{{this.endretInntekt.opplysning.svar}}</td>
                            </tr>
                        {{/if}}
                        </tbody>
                    </table>
                </td>
            </tr>
        {{/each}}

        {{#with soeker.arbeidOgUtdanning.utdanning.svar}}
            <tr>
                <td colspan="2">
                    <table class="inner">
                        <thead>
                        <tr>
                            <th colspan="2">Utdanning</th>
                        </tr>
                        </thead>

                        <tbody>
                        <tr>
                            <td>{{this.navn.spoersmaal}}</td>
                            <td>{{this.navn.svar}}</td>
                        </tr>
                        <tr>
                            <td>{{this.startDato.spoersmaal}}</td>
                            <td>{{iso_to_nor_date this.startDato.svar}}</td>
                        </tr>
                        <tr>
                            <td>{{this.sluttDato.spoersmaal}}</td>
                            <td>{{iso_to_nor_date this.sluttDato.svar}}</td>
                        </tr>
                        </tbody>
                    </table>
                </td>
            </tr>
        {{/with}}

        {{#with soeker.arbeidOgUtdanning.annet}}
        <tr>
            <td colspan="2">
                <table class="inner">
                    <thead>
                    <tr>
                        <th colspan="2">Annet</th>
                    </tr>
                    </thead>

                    <tbody>
                    <tr>
                        <td>{{this.spoersmaal}}</td>
                        <td>{{this.svar}}</td>
                    </tr>
                    </tbody>
                </table>
            </td>
        </tr>
        {{/with}}
    </tbody>
    {{/with}}

    {{#with soeker.fullfoertUtdanning}}
    <tr>
            <th colspan="2">
                <h3>Fullført utdanning</h3>
            </th>
        </tr>
     <tr>
        <td colspan="2">
            <table class="inner">
                <thead>
                <tr>
                    <th colspan="2">Utdanning</th>
                </tr>
                </thead>

                <tbody>
                <tr>
                    <td>{{this.spoersmaal}}</td>
                    <td>{{capitalize_names this.svar}}</td>
                </tr>
                {{#with this.opplysning }}
                    <tr>
                        <td>{{this.opplysning}}</td>
                        <td>{{this.svar}}</td>
                    </tr>
                {{/with}}
                </tbody>
            </table>
        </td>
    </tr>
    {{/with}}

    {{#with soeker.andreYtelser}}
    <tr>
        <th colspan="2">
            <h3>Ytelser</h3>
        </th>
    </tr>
     <tr>
        <td colspan="2">
            <table class="inner">
                <tbody>
                <tr>
                    <td>{{this.kravOmAnnenStonad.spoersmaal}}</td>
                    <td>{{capitalize_names this.kravOmAnnenStonad.svar}}</td>
                </tr>
                {{#eq this.kravOmAnnenStonad.svar "JA"}}
                <tr>
                    <td>{{this.kravOmAnnenStonad.opplysning.spoersmaal}}</td>
                    <td>{{capitalize_names this.kravOmAnnenStonad.opplysning.svar}}</td>
                </tr>
                {{/eq}}
                </tbody>
            </table>
        </td>
    </tr>
     <tr>
        <td colspan="2">
            <table class="inner">
                <tbody>
                <tr>
                    <td>{{this.annenPensjon.spoersmaal}}</td>
                    <td>{{capitalize_names this.annenPensjon.svar}}</td>
                </tr>
                {{#eq this.annenPensjon.svar "JA"}}
                <tr>
                    <td>{{this.annenPensjon.opplysning.spoersmaal}}</td>
                    <td>{{this.annenPensjon.opplysning.svar}}</td>
                </tr>
                {{/eq}}
                </tbody>
            </table>
        </td>
    </tr>
    <tr>
        <td colspan="2">
            <table class="inner">
                <tbody>
                <tr>
                    <td>{{this.pensjonUtland.spoersmaal}}</td>
                    <td>{{capitalize_names this.pensjonUtland.svar}}</td>
                </tr>
                {{#eq this.pensjonUtland.svar "JA"}}
                <tr>
                    <td>{{this.pensjonUtland.opplysning.pensjonsType.spoersmaal}}</td>
                    <td>{{this.pensjonUtland.opplysning.pensjonsType.svar}}</td>
                </tr>
                <tr>
                    <td>{{this.pensjonUtland.opplysning.land.spoersmaal}}</td>
                    <td>{{this.pensjonUtland.opplysning.land.svar}}</td>
                </tr>
                <tr>
                    <td>{{this.pensjonUtland.opplysning.bruttobeloepPrAar.spoersmaal}}</td>
                    <td>{{this.pensjonUtland.opplysning.bruttobeloepPrAar.svar}}</td>
                </tr>
                {{/eq}}
                </tbody>
            </table>
        </td>
    </tr>
    {{/with}}
</table>
